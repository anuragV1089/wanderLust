<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <h1 class="col-6 offset-3">Sign Up for WanderLust</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Add a name for yourself"
            class="form-control"
            required
          />
          <div class="valid-feedback">Name looks nice!</div>
          <div class="invalid-feedback">
            I ain't saying it is trash but I also ain't saying it isn't.
          </div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="text"
            name="email"
            placeholder="Give a valid email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            placeholder="Write a password"
            class="form-control"
            required
          />
        </div>

        <button class="btn btn-success user-btn">Sign Up</button>
      </form>
    </div>
  </div>
</body>
